# Paxeer Launchpad Environment Configuration
# Copy this file to .env and fill in your values

# ==============================================
# BLOCKCHAIN CONFIGURATION
# ==============================================

# Paxeer Network RPC endpoints
PAXEER_RPC_HTTP=https://v1-api.paxeer.app/rpc
PAXEER_RPC_WS=wss://v1-api.paxeer.app/rpc
PAXEER_CHAIN_ID=80000

# Deployed contract addresses (update after deployment)
PAXEER_FACTORY=0xFB4E790C9f047c96a53eFf08b9F58E96E6730c6a
PAXEER_ROUTER=0x534DfB04a1A15924daB357694647e4f957543e8F
PAXEER_USDC=0x61Be934234717c57585d5f558360aFA59F8adB56

# Private key for contract deployment (DO NOT COMMIT)
PRIVATE_KEY=

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# PostgreSQL connection string
PAXEER_DB_DSN=postgres://pax:pax@localhost:5432/paxeer?sslmode=disable

# Database connection pool settings
PAXEER_DB_MAX_CONNS=25
PAXEER_DB_MIN_CONNS=5
PAXEER_DB_MAX_CONN_LIFETIME=1h

# ==============================================
# INDEXER CONFIGURATION
# ==============================================

# Starting block for indexing (0 = genesis)
PAXEER_START_BLOCK=1

# Number of confirmations to wait before considering blocks final
PAXEER_CONFIRMATIONS=2

# Batch size for processing blocks
PAXEER_BATCH_SIZE=5000

# Indexer polling interval (when WebSocket is unavailable)
PAXEER_POLL_INTERVAL=3s

# ==============================================
# API SERVER CONFIGURATION
# ==============================================

# API server listen address
PAXEER_API_ADDR=:8080

# API request timeout
PAXEER_API_TIMEOUT=30s

# Enable CORS (for development)
PAXEER_API_CORS=true

# Rate limiting (requests per minute)
PAXEER_API_RATE_LIMIT=100

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Log level: debug, info, warn, error
PAXEER_LOG_LEVEL=info

# Log format: json, text
PAXEER_LOG_FORMAT=text

# Log output: stdout, stderr, file path
PAXEER_LOG_OUTPUT=stdout

# ==============================================
# MONITORING CONFIGURATION
# ==============================================

# Prometheus metrics endpoint
PAXEER_METRICS_ADDR=:9090

# Health check interval
PAXEER_HEALTH_CHECK_INTERVAL=30s

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# JWT secret for API authentication (if enabled)
PAXEER_JWT_SECRET=

# API key for admin endpoints (if enabled)
PAXEER_API_KEY=

# CORS allowed origins (comma-separated)
PAXEER_CORS_ORIGINS=http://localhost:3000,https://app.paxeer.com

# ==============================================
# EXTERNAL SERVICES
# ==============================================

# Redis connection string (optional, for caching)
PAXEER_REDIS_URL=redis://localhost:6379/0

# Ethereum node provider API keys
ALCHEMY_API_KEY=
INFURA_API_KEY=

# Block explorer API keys (for contract verification)
ETHERSCAN_API_KEY=
BASESCAN_API_KEY=

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================

# Enable development mode features
PAXEER_DEV_MODE=false

# Enable debug endpoints
PAXEER_DEBUG_ENDPOINTS=false

# Mock external services
PAXEER_MOCK_SERVICES=false

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================

# Frontend application URL
PAXEER_FRONTEND_URL=http://localhost:3000

# API base URL for frontend
PAXEER_API_BASE_URL=http://localhost:8080

# WebSocket URL for real-time updates
PAXEER_WS_URL=ws://localhost:8080/ws

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================

# Environment: development, staging, production
NODE_ENV=development

# Docker registry for container images
DOCKER_REGISTRY=ghcr.io/paxeer

# Kubernetes namespace
K8S_NAMESPACE=paxeer-launchpad

# ==============================================
# BACKUP CONFIGURATION
# ==============================================

# Database backup schedule (cron format)
PAXEER_BACKUP_SCHEDULE=0 2 * * *

# Backup retention period
PAXEER_BACKUP_RETENTION=30d

# Backup storage location
PAXEER_BACKUP_STORAGE=s3://paxeer-backups/

# ==============================================
# NOTIFICATION CONFIGURATION
# ==============================================

# Slack webhook for alerts
SLACK_WEBHOOK_URL=

# Email configuration for notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Discord webhook for community notifications
DISCORD_WEBHOOK_URL=
